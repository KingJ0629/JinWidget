<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TailsTextView">
        <attr name="leftTextTails" format="string"/>
        <attr name="rightTextTails" format="string"/>
        <attr name="line_through" format="boolean"/>
        <attr name="line_under" format="boolean"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextMoreLayout">
        <attr name="tmLeftText" format="string"/>
        <attr name="tmLeftTextColor" format="color"/>
        <attr name="tmLeftTextSize" format="dimension"/>
        <attr name="tmRightText" format="string"/>
        <attr name="tmRightTextColor" format="color"/>
        <attr name="tmRightTextSize" format="dimension"/>
        <attr name="tmRightImgVisible" format="boolean"/>
        <attr name="tmBottomLineVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LoadView">
        <attr name="LoadViewNoDataText" format="string"/>
        <attr name="LoadViewNoDataImg" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SuperText">
        <attr name="ST" format="dimension"/>
        <attr name="SS" format="dimension"/>
        <attr name="SM" format="dimension"/>
        <attr name="SB" format="dimension"/>
        <attr name="SH" format="dimension"/>
        <attr name="C0" format="color"/>
        <attr name="L0" format="integer"/>
        <attr name="textAttr">
            <flag name="ST" value="0x1"/>
            <flag name="SS" value="0x2"/>
            <flag name="SM" value="0x3"/>
            <flag name="SB" value="0x4"/>
            <flag name="SH" value="0x5"/>
            <flag name="C3" value="0x10"/>
            <flag name="C6" value="0x20"/>
            <flag name="CA" value="0x30"/>
            <flag name="CF" value="0x40"/>
            <flag name="C0" value="0x90"/>
            <flag name="L1" value="0x100"/>
            <flag name="L2" value="0x200"/>
            <flag name="L0" value="0x900"/>
        </attr>
    </declare-styleable>
</resources>